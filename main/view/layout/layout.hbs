                        <ul class="area-list">
                            <li class="area" data-id="{{id}}">{{name}}</li>
                        </ul>
                    </div>
                    <input class="search-input" type="text" placeholder="请输入区域或地标进行搜索">
                    <span class="search-btn">
                        <i class="fa fa-search"></i>
                    </span>
                </div>--}}

                <div class="operations">
                    <a class="home" href="/">首页</a>
                    <span class="find-store">一键找仓</span>
                    <span class="rent-out">一键出租</span>
                    <div class="login-status">
                        <span class="sep-line"></span>
                        {{#if landed}}
                            <a class="user-center" href="/account/follow">个人中心</a>
                            <a class="logout">退出</a>
                        {{^}}
                            <span class="login-btn">登录  </span>
                        {{/if}}
                    </div>
                </div>
            </div>
        {{/unless}}
